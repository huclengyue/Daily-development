<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.apkdv.largeimage.imageLoadOld.FrescoImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:roundBottomLeft="false"
        app:roundTopRight="false"
        app:roundAsCircle="true"
        app:roundWithOverlayColor="@android:color/holo_blue_light"
        app:roundedCornerRadius="16dp"
        app:roundingBorderColor="@android:color/holo_red_dark"
        app:roundingBorderWidth="5dp"/>
</LinearLayout>